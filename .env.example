# Temporal server address
TEMPORAL_HOST=temporal:7233

# API Keys and Tokens
TELEGRAM_TOKEN=your_telegram_bot_token_here
# Comma-separated list of allowed Telegram user IDs (optional)
TELEGRAM_ALLOWED_USER_IDS=123456789,987654321

# Paths (inside container)
OBSIDIAN_VAULT_PATH=/vault
GOOGLE_CREDENTIALS_PATH=/secrets/google.json
GOOGLE_TOKEN_PATH=/secrets/token.json

# Google OAuth2 Configuration
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:9000/google/oauth2callback
GOOGLE_OAUTH_SCOPES=https://www.googleapis.com/auth/calendar.readonly,https://www.googleapis.com/auth/calendar.events.readonly

# Optional: Custom calendar ID (default: 'primary')
GOOGLE_CALENDAR_ID=primary

# Trip Task Monitor Configuration
TRIP_MONITOR_ENABLED=true
TRIP_MONITOR_SCHEDULE="0 9 * * *"
TRIP_MONITOR_DAYS_AHEAD=30
RUN_MODE=web

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration
# Fernet key for encrypting stored credentials (required)
# Generate one with: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
DB_ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET=your-jwt-secret-key-change-in-production
